extends layout

block layout-content

  div.View.WelcomeView
    ul.Banner
      li.h1 Conceal Assistant
      li
      a(href="/main")
        img.logo(src="house-solid.svg"  alt="Main")
      li 
      a(href="https://conceal.network" target="blank" rel="noopener")
       img.logo(src="logo-64x64.png" alt="C")
      li
      a(href="/logout")
       img.logo(src="right-from-bracket-solid.svg" Title="Logout") 
      .version v#{version}
    form(action="/msoftware" method="POST" id="modify")
        div.MessageConfirm
          div.Title
            h1 mining software
          span.Details Software: #{software}
          div.form-group
            label(for="wdir") Working Directory :
            input(type="text" style="width: 19rem; overflow-wrap: break-word;" id="wdir" name="wdir" value=wdir placeholder=wdir)
          div.form-group
            label(for="mpath") Miner Path :
            input(type="text" style="width: 19rem; overflow-wrap: break-word;" id="mpath" name="mpath" value=mpath placeholder=mpath)
          br
          div.flight-nav
            -let m = eval(shown) - 1
            -let p = eval(shown) + 1
            -let moins = "/msoftware?toshow=" + m
            -let plus = "/msoftware?toshow=" + p
            a(href=moins).nav-item
              img.caret-icon(src="caret-left.svg" alt="Previous")
            span.nav-item Flight Sheet # #{shown}
            if (p <= last)
              a(href=plus).nav-item
                img.caret-icon(src="caret-right.svg" alt="Next")
          br
          button(type="submit" form="modify") Modify
          -if (message != '')
           h4 #{message}