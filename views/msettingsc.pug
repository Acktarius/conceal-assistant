extends layout

block layout-content
  div.View.WelcomeView
    ul.Banner
      li.h1 Conceal Assistant
      li
      a(href="/main")
          i(class="fa-solid fa-house fa-xl icon-colour")
      li
      a(href="/logout")
       i(class="fa-solid fa-right-from-bracket fa-xl icon-colour")
      li 
      a(href="https://conceal.network" target="blank" rel="noopener")
       img.logo(src="logo-256x256-033.png" alt="Logo")
    form(action="/msettingsc" method="POST" id="inject")
    form(method="POST" action="/msettingsc?_method=DELETE" id="cancel")
        div.MessageConfirm
          div.Title
            h1 miner settings
          span.Details Software: #{software}
          br
          label(for="wallet")  Mining Address :
          br
          h2 #{wallet}
          br
          label(for="miningpool")  Mining Pool and
          span
            label(for="port")  port :
          br
          span
            h2 #{pool} #{port}
          br
          label(for="rigname")  Miner Name :
          span 
            h2 #{rigname}
          br
          label(for="password")  password :
          span 
            h2 #{password}
          br
          button.inlinebutton(type="submit" form="cancel") Cancel
          button.inlinebutton(type="submit" form="inject") Confirm
            